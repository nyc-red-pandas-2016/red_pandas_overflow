<h1><%= @question.title %></h1>
  <div class="container">
    <%= @question.body %><br>
  <!--   Display the Question Tags, if any -->
    <% if @question.tags %>
        <% @question.tags.each do |tag|%>
          <%= tag.name %>
        <% end %>
    <% end %>
  <!-- Allow the user to post a comment -->
    <p><a href="/questions/<%=@question.id%>/comments/new">add a comment</a></p>
  <!--   Display existing comments to the question, if any -->
    <% if @question.comments %>
      <ul>
        <% @question.comments.each do |comment|%>
          <li class="comment"><%= comment.body %> <em>- <%= comment.author %></em></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <h4><b>Answers:</b></h4>
  <% @question.answers.each do |answer| %>
    <ul>
<!--   Display the Answer Tags, if any -->
        <% if answer.tags %>
            <% answer.tags.each do |tag|%>
              <em><%= tag.name %></em>
            <% end %>
        <% end %>

<!--     Print comments for each Answer -->
      <li><b>Answer: </b><%= answer.body %><br> Author: <%= answer.author %> <br> Posted Date: <%= answer.created_at.strftime("%b %d, 20%y") %><br><br>

        <% if answer.comments %>
          <% answer.comments.each do |comment|%>
            <li class="comment"> Comment: <%= comment.body %> <em>- <%= comment.author %></em><br> Posted Date: <%= comment.created_at.strftime("%b %d, 20%y") %></li><br>
          <% end %>
    <!-- Allow the user to comment on an Answer -->

      <p><a href="/answers/<%=answer.id%>/comments/new">add a comment</a></p><br>


        <li>
          <table>
            <tr>
              <td>
                <div>
                  <a class="up_button" href="/vote/<%= answer.id %>/up"><span class="glyphicon glyphicon-circle-arrow-up"></span></a>
                    <span><%= answer.votes.sum(:vote_count) %></span>
                  <a class="down_button" href="/vote/<%= answer.id %>/down"><span class="glyphicon glyphicon-circle-arrow-down"></span></a>
                </div>
              </td>
            </tr>
          </table>
      </li><br>

  <% end %>

