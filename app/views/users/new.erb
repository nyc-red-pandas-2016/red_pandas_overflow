<div class="container">
  <h2>Register a New Account!</h2>

<% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

<form class="form-horizontal" role="form" action="/users" method="post">
  <label class="control-label col-sm-1" for="user[username]">Username:</label>
  <input type="text" name="user[username]"><br><br>
    <label class="control-label col-sm-1" for="user[email]">Email:</label>
  <input type="text" name="user[email]"><br><br>
  <label class="control-label col-sm-1" for="user[password]">Password:</label>
  <input type="password" name="user[password]"><br><br>
  <input type="submit" class = ".btn-default" value="Register"><br>
</form>

</div>
