
<h3>Answer Reply:</h3>

<% if @errrors %>
  <% @errors.each do |error| %>
    <ul>
      <li><%= error %></li>
    </ul>
    <% end %>
<% end %>


<form action="/answers" method="post">
   <div class="col-xs-4">
  <input input class="form-control input-lg" type="text" name="answer[body]" placeholder="Add answer"></div>
  <input type="hidden" name="answer[author]" value="<%= current_user.username %>" >
  <input type="hidden" name="answer[user_id]" value="<%= current_user.id %>" >

  <button type="submit" class="btn btn-default">Post Answer</button>
</form>
